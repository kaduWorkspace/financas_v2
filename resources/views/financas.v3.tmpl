{{ define "financas_htmx.tmpl" }}
<!DOCTYPE html>
<html lang="en" hx-boost="true">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Simular Investimento JC</title>
        <link href="/public/css/main.css" rel="stylesheet">
        <link href="/public/css/financas.css" rel="stylesheet">
        <script src="https://unpkg.com/htmx.org@1.9.6"></script>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <style>
            @keyframes fade-in {
                0% { opacity: 0; transform: scale(0.9); }
                100% { opacity: 1; transform: scale(1); }
            }
            .animate-fade-in { animation: fade-in 1s ease-in-out forwards; }
        </style>
    </head>
    <body class="bg-pretoTransparente flex flex-col min-w-screen items-center min-h-screen">
        <header class="fixed top-0 left-0 w-full bg-neutral-900 shadow-md z-50">
            <div class="flex justify-between items-center px-6 py-4">
                <div class="flex items-center">
                    <img src="/public/images/logo-simples.svg" alt="Logo" class="w-12 h-12 mr-3">
                    <span class="text-xl font-bold text-gray-300">Simular Investimento JC</span>
                    <span class="ml-2 px-2 py-1 bg-yellow-300 text-neutral-900 text-sm font-semibold rounded-full shadow-sm">BETA</span>
                </div>
                <nav class="hidden md:flex space-x-6">
                    <a href="#formulario_calcular" class="text-gray-300 hover:text-white transition">Simular</a>
                    <a href="#contato" class="text-gray-300 hover:text-white transition">Contato</a>
                </nav>
                <button class="md:hidden text-gray-300 hover:text-white focus:outline-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </header>

        <main class="h-full w-full" id="main-content" hx-swap="innerHTML">
            {{ template "form-section" . }}
            {{ if .valorizacao }}
                {{ template "results-section" . }}
            {{ end }}
        </main>

        <footer class="bg-neutral-900 text-gray-300 w-full h-20 flex flex-col justify-center items-center mt-auto">
            <div id="contato" class="text-center">
                <h2 class="text-lg font-semibold mb-1">Entre em contato</h2>
                <div class="flex space-x-4 justify-around">
                    <a href="https://github.com/KaduHod" target="_blank" class="hover:text-white">
                        <img src="/public/images/github.svg" alt="GitHub" class="w-6 h-6 inline">
                    </a>
                    <a href="https://www.linkedin.com/in/carlosjrribas98/" target="_blank" class="hover:text-white">
                        <img src="/public/images/linkedin.svg" alt="LinkedIn" class="w-6 h-6 inline">
                    </a>
                    <a href="mailto:carlosjr.ribas@gmail.com" class="hover:text-white">
                        <img src="https://cdn.simpleicons.org/gmail/ffffff" alt="Gmail" class="w-6 h-6 inline">
                    </a>
                </div>
            </div>
        </footer>

        <script>
            const header = document.getElementsByTagName('header')[0];
            const headerHeight = header.offsetHeight;
            const main = document.getElementsByTagName('main')[0];
            main.style.paddingTop = `${headerHeight}px`;
        </script>
    </body>
</html>
{{ end }}
{{ define "form-section" }}
<div id="form-section" class="flex flex-col w-full text-white justify-center items-center p-4">
    <div class="flex flex-col w-5/6 h-2/4 justify-around items-center rounded-appMajor">
        <div class="text-center max-w-xl">
            <p class="text-lg text-gray-400 opacity-75">
                Preencha as informações abaixo para simular seu CDB.
            </p>
        </div>

        {{ if .erros_formulario }}
        <div class="w-full sm:w-5/6 md:w-3/4 lg:w-1/2 bg-red-900 text-white p-4 rounded-md shadow-md mt-4">
            <ul class="list-inside text-sm space-y-2">
                {{ range $chave, $valor := .erros_formulario }}
                    {{ range $_, $valor_erro := $valor }}
                    <li class="flex items-start space-x-2">
                        <span class="w-1 h-1 rounded-full bg-gray-400 mt-1"></span>
                        <p class="text-gray-200">{{ $valor_erro }}</p>
                    </li>
                    {{ end }}
                {{ end }}
            </ul>
        </div>
        {{ end }}

        <form hx-post="/v2/simular-jc" hx-target="#main-content" hx-swap="innerHTML" id="formulario_calcular" class="flex flex-col w-full items-center">
            <div class="flex flex-col sm:flex-row w-5/6 justify-center">
                            <div class="flex flex-col m-1 sm:w-2/4 w-full">
                                <label for="valor_inicial" class="text-gray-400 text-sm mb-1">
                                    Dinheiro em caixa hoje
                                    <span class="text-gray-500">(Ex.: 10000)</span>
                                </label>
                                <input type="hidden" id="valor_inicial_input" name="valor_inicial" value="">
                                <input id="valor_inicial" type="text" step="any"
                                class="bg-neutral-900 rounded-lg shadow-md p-3 text-gray-300 placeholder-gray-500 focus:ring-2 focus:ring-blue-400 focus:outline-none transition-all duration-300"
                                placeholder="Insira o valor" value="$ 0,0">
                                <span class="text-red-500 text-xs mt-1 hidden" id="error_valor_inicial"></span>
                            </div>
                            <div class="flex flex-col m-1 sm:w-2/4 w-full">
                                <label for="valor_aporte" class="text-gray-400 text-sm mb-1">
                                    Valor Aporte Mensal
                                    <span class="text-gray-500">(Ex.: 500)</span>
                                </label>
                                <input type="hidden" name="valor_aporte" id="valor_aporte_input" value="">
                                <input
                                id="valor_aporte"
                                type="text"
                                class="bg-neutral-900 rounded-lg shadow-md p-3 text-gray-300 placeholder-gray-500 focus:ring-2 focus:ring-blue-400 focus:outline-none transition-all duration-300"
                                placeholder="Insira o valor"
                                value="$ 0,0"
                                />
                                <span class="text-red-500 text-xs mt-1 hidden" id="error_valor_aporte"></span>
                            </div>
                            <!--<div class="flex flex-col m-1 sm:w-2/4 w-full">
                                <label for="valor_aporte" class="text-gray-400 text-sm mb-1">
                                    Valor Aporte Mensal
                                    <span class="text-gray-500">(Ex.: 500)</span>
                                </label>
                                <input id="valor_aporte" type="number" step="any" name="valor_aporte"
                                class="bg-neutral-900 rounded-lg shadow-md p-3 text-gray-300 placeholder-gray-500 focus:ring-2 focus:ring-blue-400 focus:outline-none transition-all duration-300"
                                placeholder="Insira o valor" value="">
                                <span class="text-red-500 text-xs mt-1 hidden" id="error_valor_aporte"></span>
                            </div>-->
                        </div>
                        <div class="flex flex-col sm:flex-row w-5/6 justify-center">
                            <div class="flex flex-col m-1 sm:w-2/4 w-full">
                                <label for="valor_taxa_anual" class="text-gray-400 text-sm mb-1">
                                    Valor Taxa Anual
                                    <span class="text-gray-500">(Selic.: {{ .taxa_selic }} %)</span>
                                </label>
                                <input type="hidden" name="valor_taxa_anual" id="valor_taxa_anual_input">
                                <input id="valor_taxa_anual" type="text" step="any"
                                class="bg-neutral-900 rounded-lg shadow-md p-3 text-gray-300 placeholder-gray-500 focus:ring-2 focus:ring-blue-400 focus:outline-none transition-all duration-300"
                                placeholder="Insira o valor"
                                value="% {{ .taxa_selic }}">
                                <span class="text-red-500 text-xs mt-1 hidden" id="error_valor_taxa_anual"></span>
                            </div>
                            <div class="flex flex-col sm:flex-row w-5/6 justify-center">
                                <div class="flex flex-col m-1 sm:w-2/4 w-full">
                                    <label for="data_final_opcao" class="text-gray-400 text-sm mb-1">
                                        Data do resgate
                                    </label>
                                    <select data-ignore_input="1" id="data_final_opcao" name="data_final_opcao"
                                        class="bg-neutral-900 rounded-lg shadow-md p-3 text-gray-300 focus:ring-2 focus:ring-blue-400 focus:outline-none transition-all duration-300">
                                        <option value="6" selected>6 meses</option>
                                        <option value="1">1 ano</option>
                                        <option value="5">5 anos</option>
                                        <option value="10">10 anos</option>
                                        <option value="20">20 anos</option>
                                        <!--<option value="data_especifica">Data específica</option>-->
                                    </select>
                                    <span class="text-red-500 text-xs mt-1 hidden" id="error_data_final_opcao"></span>
                                </div>
                                <div class="flex flex-col m-1 sm:w-2/4 w-full hidden" id="data_especifica_wrapper">
                                    <label for="data_final" class="text-gray-400 text-sm mb-1">
                                        Data Específica
                                        <!--<span class="text-gray-500">(Ex.: 2025-12-31)</span>-->
                                    </label>

                                    <input id="data_final" type="date" name="data_final"
                                    class="bg-neutral-900 rounded-lg shadow-md p-3 text-gray-300 placeholder-gray-500 focus:ring-2 focus:ring-blue-400 focus:outline-none transition-all duration-300"
                                    value="">
                                    <span class="text-red-500 text-xs mt-1 hidden" id="error_data_final"></span>
                                </div>
                            </div>
                        </div>
                        <div class="flex flex-col m-1 w-5/6 hidden">
                            <label for="dias_liquidez_por_ano" class="text-gray-400 text-sm mb-1">
                                Quantidade de dias de liquidez por ano
                            </label>
                            <select name="dias_liquidez_por_ano" id="tipo_dias_liquidez_por_ano"
                                class="bg-neutral-900 rounded-lg shadow-md p-3 text-gray-300 focus:ring-2 focus:ring-blue-400 focus:outline-none transition-all duration-300">
                                <!--<option value="255"> 255 - Dias úteis (Mercado financeiro brasileiro)</option>
                                <option value="366">366/365 - Todos os dias do ano</option>-->
                                <option value="12">12 - Todo mês</option>
                            </select>
                        </div>
                        <input id="data_inicial" type="hidden" name="data_inicial" value="">
                        <input type="hidden" name="csrf_token" value="{{ .csrf }}">
                        <button id="calcular" type="submit" class="my-1 flex items-center justify-center rounded-lg w-5/6 mx-auto bg-neutral-800 text-gray-300 py-3 px-4 font-medium hover:bg-neutral-700 hover:text-white transition-all duration-300 shadow-md">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 6h6m-6-12h6" />
                            </svg>
                            Simular
                        </button>        </form>
    </div>
</div>
{{ end }}

