                            {{range $chave, $valor := .erros_formulario}}
                            {{range $_, $valor_erro := $valor}}
                            <li class="flex items-start space-x-2">
                                <span class="w-1 h-1 rounded-full bg-gray-400 mt-1"></span>
                                <p class="text-gray-200">{{ $valor_erro }}</p>
                            </li>
                            {{end}}
                            {{end}}
